<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>

    <style>
    body { background-image: url("https://cdn.pixabay.com/photo/2017/08/14/13/49/cartoon-2640561_960_720.jpg"); }

        h1 {
            color: red;
        }

        p {
            color: blue;
        }

    </style>

    <div class="container body-content">
        <div id="my-carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#my-carousel" data-slide-to="0" class="active"></li>
                <li data-target="#my-carousel" data-slide-to="1"></li>
                <li data-target="#my-carousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img src="@Url.Content("~/Images/logo_museo.jpg")" style="height: 50vh; width: 50vh; text-align:center" />
                    <div class="carousel-caption">

                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Images/EPN_logo_.jpg")" style="height: 50vh; width: 50vh; text-align:center" />
                    <div class="carousel-caption">

                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Images/Jugando_animales_logo.jpg")" style="height: 50vh; width: 50vh; text-align:center" />
                    <div class="carousel-caption">

                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>

        @RenderBody()
        <hr />
        <footer>
            
            <table style="width:100%">
                <tr>
                    <td rowspan="4"><p>&copy; @DateTime.Now.Year - EcoGame</p></td>
                    <th rowspan="4">Integrantes:</th>
                    <td>
                        <ul>
                            <li>Daniela Ramos</li>
                            <li>Verónica Jácome</li>
                            <li>Jesenia Erraes</li>
                            <li>Tania Guamushig</li>
                        </ul>
                    </td>
                </tr>
                
            </table>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
