
<!DOCTYPE html>

<html>
<head>

    
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

</head>
<body>
    
    <div class="container body-content">
        <div id="my-carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#my-carousel" data-slide-to="0" class="active"></li>
                <li data-target="#my-carousel" data-slide-to="1"></li>
                <li data-target="#my-carousel" data-slide-to="2"></li>
                <li data-target="#my-carousel" data-slide-to="3"></li>
            </ol>
            <br /><br />
            <div class="carousel-inner" align="center" style="height: auto">
                <div class="item active">

                    <img src="@Url.Content("~/Images/logo_museo.jpg")" style="height: 30vh" class="img-fluid" alt="Responsive image" />
                    <br /><div class="carousel-caption">

                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Images/EPN_logo_.jpg")" style="height: 30vh" class="img-fluid" alt="Responsive image" />
                    <br /><div class="carousel-caption">

                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Images/logo.png")" style="height: 30vh" class="img-fluid" alt="Responsive image" />
                    <br /><div class="carousel-caption">

                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Images/Jugando_animales_logo.jpg")" style="height: 30vh" class="img-fluid" alt="Responsive image" />
                    <br /><div class="carousel-caption">

                    </div>
                </div>
            </div>
            <br /><br />
            <a class="left carousel-control" href="#my-carousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#my-carousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
        <br />

        @RenderBody()
        <hr />
        <footer>

            <table style="width:100%">
                <tr>
                    <td rowspan="4"></td>
                    <td rowspan="4">&copy;@DateTime.Now.Year - EcoGame</td>
                    <th rowspan="4">Integrantes:</th>
                    <td>
                        <ul>
                            <li>Daniela Ramos</li>
                            <li>Verónica Jácome</li>
                            <li>Jesenia Erraes</li>
                            <li>Tania Guamushig</li>
                        </ul>
                    </td>
                </tr>

            </table>
        </footer>
    </div>
</body>
</html>






